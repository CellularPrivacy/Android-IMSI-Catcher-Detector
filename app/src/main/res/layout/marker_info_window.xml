<?xml version="1.0" encoding="utf-8"?>
<TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
             android:id="@+id/mainView"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
              android:background="@color/black">

    <TableRow
            android:id="@+id/open_cell_label"
            android:gravity="center_horizontal"
            android:visibility="gone"
            android:tag="device">
        <TextView
                android:textSize="16sp" android:text="@string/open_cell_id_label"
                android:layout_span="2"
                android:textColor="@color/green_text"
                android:padding="4dip"/>
    </TableRow>

    <TableRow
            android:tag="device">

        <TextView
                android:id="@+id/cell_id_label" android:text="@string/cell_id_label"
                android:textSize="15sp"
                android:textColor="@color/white"
                android:padding="2dip" android:gravity="end"
                android:layout_gravity="end"/>

        <TextView
                android:id="@+id/cell_id" android:text="@string/empty"
                android:textSize="15sp"
                android:textColor="@color/medium_blue"
                android:padding="2dip" android:gravity="start"/>
    </TableRow>

    <TableRow
            android:tag="device">

        <TextView
                android:id="@+id/lat_label" android:text="@string/lat_label"
                android:textColor="@color/white"
                android:padding="2dip" android:gravity="end"
                android:layout_gravity="end"/>

        <TextView
                android:id="@+id/lat" android:text="@string/empty"
                android:textColor="@color/medium_blue"
                android:padding="2dip" android:gravity="start"/>
    </TableRow>

    <TableRow
            android:tag="device">

        <TextView
                android:id="@+id/lng_label" android:text="@string/lng_label"
                android:textColor="@color/white"
                android:padding="2dip" android:gravity="end"
                android:layout_gravity="end"/>

        <TextView
                android:id="@+id/lng" android:text="@string/empty"
                android:textColor="@color/medium_blue"
                android:padding="2dip" android:gravity="start"/>
    </TableRow>

    <TableRow
            android:tag="device">

        <TextView
                android:id="@+id/mcc_label" android:text="@string/mcc_label"
                android:textColor="@color/white"
                android:padding="2dip" android:gravity="end"
                android:layout_gravity="end"/>

        <TextView
                android:id="@+id/mcc" android:text="@string/empty"
                android:textColor="@color/medium_blue"
                android:padding="2dip" android:gravity="start"/>
    </TableRow>

    <TableRow
            android:tag="device">

        <TextView
                android:id="@+id/mnc_label" android:text="@string/mnc_label"
                android:textColor="@color/white"
                android:padding="2dip" android:gravity="end"
                android:layout_gravity="end"/>

        <TextView
                android:id="@+id/mnc" android:text="@string/empty"
                android:textColor="@color/medium_blue"
                android:padding="2dip" android:gravity="start"/>
    </TableRow>

    <TableRow
            android:tag="device">

        <TextView
                android:id="@+id/samples_label" android:text="@string/samples_label"
                android:textColor="@color/white"
                android:padding="2dip" android:gravity="end"
                android:layout_gravity="end"/>

        <TextView
                android:id="@+id/samples" android:text="@string/empty"
                android:textColor="@color/medium_blue"
                android:padding="2dip" android:gravity="start"/>
    </TableRow>

</TableLayout>